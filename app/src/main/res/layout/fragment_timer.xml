<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawer_layout"
    android:layout_width="850px"

    android:layout_height="1000px"
    android:fitsSystemWindows="true">
    <!--android:layout_height="match_parent"
    android:layout_width="match_parent"-->

    <LinearLayout
        android:paddingTop="150px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Set Time"/>

            <Spinner
                android:layout_width="76dp"
                android:layout_height="49dp"
                android:id="@+id/hourSpinner"
                android:spinnerMode="dropdown"
                android:entries="@array/Hours"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:id="@+id/textView1" />

            <Spinner
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:id="@+id/MinuteSpinner"
                android:spinnerMode="dropdown"
                android:entries="@array/Minutes"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:id="@+id/textView" />

            <Spinner
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:id="@+id/SecondSpinner"
                android:spinnerMode="dropdown"
                android:entries="@array/Seconds" />

        </LinearLayout>


        <TextView android:id="@+id/tv_timer"
            android:layout_width="775px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="40dp"
            android:hint="@string/timer_format_hint" />


        <LinearLayout
            android:layout_width="725px"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">
            <Button
                android:id="@+id/btnStart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
